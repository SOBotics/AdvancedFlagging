{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "strictBindCallApply": false, // RequestWatcher.ts L29
    "outDir": "./dist",
    "module": "amd",
    "target": "esnext",
    "lib": [
      "es2015",
      "DOM"
    ],
    "baseUrl": "src",
    "paths": {
      "@userscriptTools/*": ["Libs/UserScriptTools/*"]
    }
  }
}